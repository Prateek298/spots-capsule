<%- include("../partials/header") %>

<div class="container">
	<div class="row">
    	<div class="col-md-5 col-8 my-5 mx-auto">
    		<h1 style="text-align: start">Update Sight</h1>
        	<form action="/sights/<%= sight._id %>?_method=PUT" method="POST">
            	<div class="form-group">
                	<input class="form-control" type="text" name="sight[placeName]" value="<%= sight.placeName %>" placeholder="Name of the Place" required>
            	</div>
            	<div class="form-group">
                	<input class="form-control" type="text" name="sight[showPic]" value="<%= sight.showPic %>" placeholder="Display Image url" required>
            	</div>
				<div class="form-group">
                	<input class="form-control" type="text" name="sight[location]" value="<%= sight.location %>" placeholder="Address" required>
            	</div>
				<div class="form-group">
                	<input class="form-control" type="text" name="sight[wiki]" value="<%= sight.wiki %>" placeholder="Paste related wikipedia url" required>
            	</div>
				<div class="form-group">
                	<input class="form-control" type="text" name="sight[creator]" value="<%= sight.creator %>" placeholder="Built By" required>
            	</div>
				<div class="form-group">
                	<input class="form-control" type="text" name="sight[builtIn]" value="<%= sight.builtIn %>" placeholder="Year of Creation" required>
            	</div>
				<div class="form-group">
                	<textarea name="sight[desc]" placeholder="Description of Place"><%= sight.desc %></textarea>
            	</div>
            	<div class="form-group">
                	<button class="btn btn-lg btn-primary btn-block">Update</button>
            	</div>
        	</form>
        	<a href="/sights/<%= sight._id %>">Go Back</a>
    	</div>
	</div>
</div>

<%- include("../partials/footer") %>