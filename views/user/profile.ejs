<!doctype html>
<html>
	<head>
		<title>Spots Capsule</title>
		<script src="https://kit.fontawesome.com/653ef1bf98.js" crossorigin="anonymous"></script>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
		<link href="https://fonts.googleapis.com/css2?family=Itim&display=swap" rel="stylesheet">
		<link rel="stylesheet" type="text/css" href="/stylesheets/profile.css">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>
	<body>
		<nav class="navbar navbar-expand-md navbar-inverse mb-3 fixed-top">
			<div class="container">
				<a class="navbar-brand" href="/">
					<img src="/logo.jpg" width="150" height="45">
				</a>
  				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    				<span class="navbar-toggler-icon"><i class="fas fa-bars" style="color: #fff; font-size: 28px;"></i></span>
  				</button>

  				<div class="collapse navbar-collapse" id="navbarSupportedContent">
    				<ul class="navbar-nav mr-auto">
      					<li class="nav-item">
        					<a class="nav-link" href="/sights">Home</a>
      					</li>
      					<li class="nav-item">
        					<a class="nav-link" href="/about">Features</a>
      					</li>
						<li class="nav-item">
        					<a id="appdl" class="nav-link" href="/download">Download App</a>
      					</li>
						<% if(currentUser && (currentUser.isAdmin || currentUser.isPermAdmin)) { %>
							<li class="nav-item">
        						<a class="nav-link" href="/users">Users</a>
      						</li>
						<% } %>
   					 </ul>
    				<ul class="navbar-nav ml-auto">
						 <% if(!currentUser){ %>
						 	<li class="nav-item">
                         		<a class="nav-link" href="/login">Login</a>
                         	</li>
		                 	<li class="nav-item">
                         		<a class="nav-link" href="/users/new">Sign-up</a>
                         	</li>
						 <% } else { %>
						 	<li class="nav-item">
                         		<a class="nav-link" href="#">
									<img id="userPic" src="<%= currentUser.profilePic.url %>">
									<span class="d-md-none d-lg-block float-none float-lg-right"> <%= currentUser.username %></span>
								</a>
                         	</li>
		                 	<li class="nav-item">
                         		<a class="nav-link" href="/logout">Logout</a>
                         	</li>
						<% } %>
					</ul>
				</div>
  			</div>
		</nav>

<!-- Profile section -->
	<div class="row">
		<main id="profileBox" class="col-9 col-sm-8 col-md-5 col-lg-3 py-3">
			<img src="<%= user.profilePic.url %>" alt="...">
			<h2><%= user.username %></h2>
			<p><%= user.email %></p>
			<% if(currentUser && user._id.equals(currentUser._id)) { %>
				<div>
					<a href="/users/<%= user._id %>/edit"><button type="button" class="btn btn-warning btn-sm mr-1">Edit</button></a>
				</div>
			<% } %>
			<% if(user.age) { %>
				<div>
					<p>Age: <%= user.age %></p>
				</div>
			<% } %>
			<div>
				<p><%= user.about %></p>
			</div>
			<% if(currentUser && user._id.equals(currentUser._id)) { %>
				<div>
					<form action="/users/<%= user._id %>?_method=DELETE" method="POST">
						<button class="btn btn-sm btn-outline-danger">Remove your account</button>
					</form>
				</div>
			<% } %>
		</main>
	</div>

	<footer style="background: #212020; color: white; text-align: center;">
		<div style="height: 10em; padding-top: 1.5rem;">
			<h5 style="line-height: inherit">
				A College Project<br>
				by<br>
				<span>Prateek Singh</span> | <span>Ayush Gupta</span>
			</h5>
		</div>
	</footer>

	<script> const User = <%- JSON.stringify(user) %> </script>	
	<script type="text/javascript" src="/scripts/footer.js"></script>
	<script type="text/javascript" src="/scripts/platformCheck.js"></script>
	<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"     crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>