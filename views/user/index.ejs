<%- include("../partials/header") %>

<div class="container" style="margin-bottom: 10em;">
	
	<h1 class="text-center">Signed up Users</h1>
	
	<table class="table table-hover table-responsive-sm" style="border: 2px solid black">
  		<thead>
    		<tr>
				<th scope="col">No.</th>
      			<th scope="col">Username</th>
      			<th scope="col">Email</th>
      			<th scope="col">Admin</th>
    		</tr>
  		</thead>
  		<tbody>
			<% users.forEach((user, i) => { %>
   				<tr>
      				<th scope="row"><%= i + 1 %></th>
      				<td><a href="/users/<%= user._id %>"><%= user.username %></a></td>
      				<td><%= user.email %></td>
      				<td>
						<form action="/users/<%= user._id %>?_method=PATCH" method="POST">
							<input disabled class="ml-2" type="checkbox" <% if(user.isAdmin) { %> checked <% } %> >
							<button class="btn btn-sm btn-primary ml-3">
								<% if(!user.isAdmin) { %> Add <% } else { %> Remove <% } %>
							</button>
						</form>
					</td>
    			</tr>
			<% }) %>
  		</tbody>
	</table>
	
	<!-- <button class="btn btn-lg btn-primary">Save Changes</button> -->
	
</div>

<%- include("../partials/footer") %>